
<h1>User info</h1>
 <div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
 </div>
 <%= link_to "User", '/users/:id/edit' %>
 


<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>

    <h4>Title</h4>
      <%= f.text_field :book_title %>
    <h4>Opinion</h4>
      <%= f.text_area :caption %>
    <%= f.submit 'Create Book' %>
  <% end %>


<h1>Book detail</h1>
  <% @book.each do |book| %>
<div>
  <!--%= image_tag book.get_image %>-->
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <p>Title：<%= book.title %></p>
  <p>説明：<%= book.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  
  <% if book.user == current_user %>
    <%= link_to "Destroy", books_path(@book), method: :delete %>
  <% end %>
  
</div>
 <% end %>