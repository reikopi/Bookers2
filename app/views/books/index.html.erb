
<h1>User info</h1>
 <div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
 </div>
 <%= link_to "User", '/users/:id/edit' %>


<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--Book.newを@bookに変更-->
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :book_title %>
    <h4>Opinion</h4>
      <%= f.text_area :caption %>
    <%= f.submit 'Create Book' %>
  <% end %>


<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>.    </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
   <td>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></td>
   <td><%=  link_to book.book_title,books_path(@book) %></td>
   <td><%= book.caption %></td>
  </tr>
  <% end %>
  </tbody>
</table>