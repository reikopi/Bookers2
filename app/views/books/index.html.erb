<%= render 'list', book: @book, user: current_user %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>    </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
   <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
   <td><%=  link_to book.book_title,book_path(book.id) %></td>
   <td><%= book.caption %></td>
  </tr>
  <% end %>
  </tbody>
</table>