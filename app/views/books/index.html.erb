<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">

<div class="col-md-4">
<%= render 'list', book: @book, user: current_user %>
</div>
<div class="col-md-6">
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>    </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
   <td><%= link_to (image_tag book.user.get_profile_image(100, 100)), user_path(book.user) %></td>
   <td><%= link_to book.title,book_path(book.id) %></td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>

</div>
</div>