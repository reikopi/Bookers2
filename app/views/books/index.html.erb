
<h1>User info</h1>




<h1>New book</h1>
  <%= form_with model: @books do |f| %>

    <h4>Title</h4>
      <%= f.text_field :book_title %>
    <h4>Opinion</h4>
      <%= f.text_area :caption %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  
<h1>Book detail</h1>
  <% @books.each do |book| %>
<div>
  <!--%= image_tag book.get_image %>-->
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <p>Title：<%= book.title %></p>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
 <% end %>