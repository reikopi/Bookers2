<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :Title %>
  
  <h4>本文</h4>
  <%= f.text_area :Opinion %>
  
  <%= f.submit 'Update Book' %>
  
  <%= link_to "Show", books_path(@book), method: :show %>
  <%= link_to "Back", books_path(@book), method: :index %>
<% end %>
