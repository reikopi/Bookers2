<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">

<div class="col-md-3">
<%= render 'list', user: @book.user,book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-hover table-inverse">
 <tbody>
  <tr>
  <td><%= link_to (image_tag @book.user.get_profile_image(100, 100)), user_path(@book.user) %>
 <!--@userを@book.userに変更-->
  <p><%= link_to @book.user.name, user_path(@book.user) %></p></td>
  <td>Title：<%= link_to @book.title, edit_book_path %></td>
  <td>Opinion：<%= @book.body %></td>

  <% if @book.user == current_user %>
    <td class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td class="btn btn-sm btn-danger"><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
  <% end %>
   </tr>
  </tbody>
</table>
</div>


</div>
</div>
