<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">

<div class="col-md-4">
<%= render 'list', user: @book.user,book: @book %>
</div>
<div class="col-md-6">
<h1>Book detail</h1>
<div>
  <!--%= image_tag book.get_image %>-->
  <%= link_to (image_tag @book.user.get_profile_image(100, 100)), user_path(@book.user) %>
  <!--<p>%= image_tag @book.user.get_profile_image(100, 100) %</p>-->
  <!--@userを@book.userに変更-->
  <p><%= link_to @book.user.name, user_path(@book.user) %></p>
  <p>Title：<%= link_to @book.title, edit_book_path %></p>
  <p>Opinion：<%= @book.body %></p>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} %>
  <% end %>
</div>
</div>
</div>
</div>
