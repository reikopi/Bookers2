<p id="notice"><%= notice %></p>
<div class="container">

<div class="row">
<div class="col-md-3">
<%= render '/books/list', user: @user, book: @book %>
</div>


<div class="col-md-8">

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
   <td><%= image_tag user.get_profile_image(100, 100) %></td>
   <td class="offset-md-1"><%= user.name %></td>
   <td><%= link_to "Show", user_path(user) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>